datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  id              String   @id @default(cuid())
  slug            String  
  title           String
  lead            String
  prepTimeMinutes Int
  servings        Int
  difficulty      Difficulty
  dishGroup       DishGroup
  preparationType PreparationType
  tags            String
  ingredients     String
  steps           String
  heroImagePath   String
  heroImageAlt    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum DishGroup {
  MAIN
  DESSERT
  BREAD
  OTHER
}

enum PreparationType {
  BAKING
  COOKING
  NO_COOK
}
